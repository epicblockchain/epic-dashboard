{
    "name": "epic-dashboard",
    "productName": "epic-dashboard",
    "version": "4.2.0",
    "description": "Dashboard for ePIC mining rigs.",
    "main": ".webpack/main",
    "scripts": {
        "start": "electron-forge start",
        "package": "electron-forge package",
        "make": "electron-forge make",
        "publish": "electron-forge publish",
        "prestart": "npm run lint -- --fix",
        "lint": "eslint --ignore-path .gitignore .",
        "format": "prettier --write .",
        "prepare": "husky install",
        "release": "release-it --no-npm.publish",
        "release-pub": "release-it --no-npm.publish --git.commitMessage='Release public version ${version}'"
    },
    "keywords": [],
    "author": {
        "name": "ePIC Dashboard",
        "email": "support@epicblockchain.io"
    },
    "license": "GPLv3",
    "engines": {
        "npm": ">=8.0.0",
        "node": ">=16.0.0"
    },
    "config": {
        "forge": {
            "packagerConfig": {
                "icon": "src/img/epic"
            },
            "makers": [
                {
                    "name": "@electron-forge/maker-squirrel",
                    "config": {
                        "name": "epic-dashboard"
                    }
                },
                {
                    "name": "@electron-forge/maker-zip"
                },
                {
                    "name": "@electron-forge/maker-deb",
                    "config": {
                        "options": {
                            "icon": "src/img/epic.png"
                        }
                    }
                },
                {
                    "name": "@electron-forge/maker-rpm",
                    "config": {
                        "options": {
                            "icon": "src/img/epic.png"
                        }
                    }
                }
            ],
            "plugins": [
                [
                    "@electron-forge/plugin-webpack",
                    {
                        "mainConfig": "./webpack.main.config.js",
                        "renderer": {
                            "config": "./webpack.renderer.config.js",
                            "entryPoints": [
                                {
                                    "html": "./src/index.html",
                                    "js": "./src/app.jsx",
                                    "name": "main_window"
                                }
                            ]
                        }
                    }
                ]
            ]
        }
    },
    "devDependencies": {
        "@amcharts/amcharts4": "^4.10.18",
        "@babel/core": "^7.14.0",
        "@babel/preset-env": "^7.14.4",
        "@babel/preset-react": "^7.13.13",
        "@electron-forge/cli": "^6.0.0-beta.61",
        "@electron-forge/maker-deb": "^6.0.0-beta.54",
        "@electron-forge/maker-rpm": "^6.0.0-beta.54",
        "@electron-forge/maker-squirrel": "^6.0.0-beta.54",
        "@electron-forge/maker-zip": "^6.0.0-beta.54",
        "@electron-forge/plugin-webpack": "^6.0.0-beta.54",
        "@marshallofsound/webpack-asset-relocator-loader": "^0.5.0",
        "babel-loader": "^8.2.2",
        "css-loader": "^4.3.0",
        "electron": "^22.0.2",
        "electron-squirrel-startup": "^1.0.0",
        "eslint": "^7.32.0",
        "eslint-config-google": "^0.14.0",
        "eslint-config-prettier": "^8.3.0",
        "form-data": "^4.0.0",
        "got": "^11.8.2",
        "husky": "^7.0.4",
        "node-loader": "^1.0.3",
        "prettier": "2.4.1",
        "react": "^17.0.2",
        "react-dom": "^17.0.2",
        "react-toastify": "^7.0.4",
        "release-it": "^15.7.0",
        "sha256-file": "^1.0.0",
        "style-loader": "^1.3.0",
        "url-loader": "^4.1.1"
    },
    "dependencies": {
        "@emotion/react": "^11.10.4",
        "@emotion/styled": "^11.10.4",
        "@mui/icons-material": "^5.10.9",
        "@mui/lab": "^5.0.0-alpha.105",
        "@mui/material": "^5.10.11",
        "@mui/styles": "^5.10.10",
        "core-js": "^3.20.2",
        "react-table": "^7.7.0",
        "react-window": "^1.8.6",
        "regenerator-runtime": "^0.13.7",
        "winston": "^3.3.3"
    }
}
